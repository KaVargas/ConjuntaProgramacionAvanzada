<% include partials/_header %>
<!--HOLA-->
<div class="container">

  <div class="row">
    <!--FORM AUTOR-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/addAuthor" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="code" placeholder="Code's author">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Name's author">
            </div>
            <button class="btn btn-primary" type="submit">
              Add author
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Code</th>
            <th>Title</th>
            <th>Year</th>
            <th>Author</th>
            <th>Operacion</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < listBooks.length; i++) { %>
            <tr>
              <td><%= listBooks[i].code%></td>
              <td><strong><%= listBooks[i].title %></strong></td>
              <td><%= listBooks[i].year %></td>
              <td><%= listBooks[i].author %></td>
              <td>
                <a href="/delete/<%= listBooks[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

     <!--FORM BOOK-->
     <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/addBook" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="code" placeholder="Code's of book">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Title's book">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="year" placeholder="Year's book">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="authorBook" placeholder="Author's book">
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

<% include partials/_footer%>
